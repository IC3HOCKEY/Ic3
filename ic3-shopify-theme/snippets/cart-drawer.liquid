<div id="CartDrawer" class="cart-drawer">
  <div class="cart-drawer__inner">
    <div class="cart-drawer__header">
      <h2>Your Cart</h2>
      <button type="button" class="cart-drawer__close" onclick="closeCart()">
        &times;
      </button>
    </div>
    
    <div id="CartContainer" class="cart-drawer__items">
      {% if cart.item_count > 0 %}
        <form action="/cart" method="post" novalidate class="cart">
          {% for item in cart.items %}
            <div class="cart-item" data-id="{{ item.id }}">
              <div class="cart-item__image">
                <img src="{{ item.image | img_url: '100x' }}" alt="{{ item.title | escape }}">
              </div>
              <div class="cart-item__details">
                <h3 class="cart-item__title">{{ item.product.title }}</h3>
                {% unless item.product.has_only_default_variant %}
                  <p class="cart-item__variant">{{ item.variant.title }}</p>
                {% endunless %}
                
                <div class="cart-item__quantity">
                  <button type="button" class="quantity-button" onclick="updateQuantity({{ item.id }}, {{ item.quantity | minus: 1 }})">-</button>
                  <input type="number" 
                         name="updates[]" 
                         id="updates_{{ item.id }}" 
                         value="{{ item.quantity }}" 
                         min="0" 
                         onchange="updateQuantity({{ item.id }}, this.value)">
                  <button type="button" class="quantity-button" onclick="updateQuantity({{ item.id }}, {{ item.quantity | plus: 1 }})">+</button>
                </div>
                
                <div class="cart-item__price">
                  {{ item.line_price | money }}
                </div>
                
                <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" class="cart-item__remove">
                  Remove
                </a>
              </div>
            </div>
          {% endfor %}
          
          <div class="cart-drawer__footer">
            <div class="cart-subtotal">
              <span>Subtotal</span>
              <span>{{ cart.total_price | money }}</span>
            </div>
            
            <button type="submit" name="checkout" class="checkout-button">
              Checkout - {{ cart.total_price | money }}
            </button>
            
            <p class="cart-policy">
              Shipping & taxes calculated at checkout
            </p>
          </div>
        </form>
      {% else %}
        <div class="cart-empty">
          <p>Your cart is empty</p>
          <a href="/collections/all" class="button">Continue Shopping</a>
        </div>
      {% endif %}
    </div>
  </div>
  <div class="cart-drawer__overlay" onclick="closeCart()"></div>
</div>

<style>
  .cart-drawer {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: white;
    z-index: 1000;
    transition: right 0.3s ease;
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
  }
  
  .cart-drawer.open {
    right: 0;
  }
  
  .cart-drawer__header {
    padding: 1rem;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .cart-drawer__close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
  }
  
  .cart-drawer__items {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }
  
  .cart-item {
    display: flex;
    padding: 1rem 0;
    border-bottom: 1px solid #eee;
  }
  
  .cart-item__image img {
    width: 80px;
    height: auto;
  }
  
  .cart-item__details {
    flex: 1;
    padding-left: 1rem;
  }
  
  .cart-item__title {
    margin: 0 0 0.5rem;
    font-size: 1rem;
  }
  
  .cart-item__variant {
    margin: 0 0 0.5rem;
    color: #666;
    font-size: 0.9rem;
  }
  
  .cart-item__quantity {
    display: flex;
    align-items: center;
    margin: 0.5rem 0;
  }
  
  .quantity-button {
    width: 30px;
    height: 30px;
    border: 1px solid #ddd;
    background: #f9f9f9;
    cursor: pointer;
  }
  
  .cart-item__quantity input {
    width: 40px;
    height: 30px;
    text-align: center;
    margin: 0 5px;
    border: 1px solid #ddd;
  }
  
  .cart-item__price {
    font-weight: bold;
    margin: 0.5rem 0;
  }
  
  .cart-item__remove {
    color: #ff4136;
    text-decoration: none;
    font-size: 0.9rem;
  }
  
  .cart-drawer__footer {
    padding: 1rem;
    border-top: 1px solid #eee;
  }
  
  .cart-subtotal {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-weight: bold;
  }
  
  .checkout-button {
    width: 100%;
    padding: 1rem;
    background: #000;
    color: white;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    margin-bottom: 1rem;
  }
  
  .cart-policy {
    font-size: 0.8rem;
    color: #666;
    text-align: center;
  }
  
  .cart-drawer__overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    display: none;
  }
  
  .cart-drawer.open + .cart-drawer__overlay {
    display: block;
  }
  
  .cart-empty {
    text-align: center;
    padding: 2rem 0;
  }
  
  .button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #000;
    color: white;
    text-decoration: none;
    margin-top: 1rem;
  }
</style>

<script>
  // Cart drawer functionality
  function openCart() {
    document.getElementById('CartDrawer').classList.add('open');
    document.body.style.overflow = 'hidden';
  }
  
  function closeCart() {
    document.getElementById('CartDrawer').classList.remove('open');
    document.body.style.overflow = '';
  }
  
  // Update cart quantity
  function updateQuantity(itemId, quantity) {
    if (quantity < 1) return;
    
    fetch('/cart/change.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: itemId,
        quantity: parseInt(quantity)
      })
    })
    .then(response => response.json())
    .then(cart => {
      // Update cart count in header
      const cartCount = document.querySelector('.cart-count');
      if (cartCount) {
        cartCount.textContent = cart.item_count;
      }
      
      // If cart is empty, close the drawer and refresh
      if (cart.item_count === 0) {
        window.location.reload();
      } else {
        // Otherwise, update the cart contents
        updateCartContents(cart);
      }
    })
    .catch(error => {
      console.error('Error:', error);
    });
  }
  
  // Update cart contents without page reload
  function updateCartContents(cart) {
    // This is a simplified version - in a real implementation, you would update the DOM
    // to reflect the new cart contents without a full page reload
    window.location.reload();
  }
  
  // Close cart when clicking outside
  document.addEventListener('click', function(event) {
    const cartDrawer = document.getElementById('CartDrawer');
    if (event.target === document.querySelector('.cart-drawer__overlay')) {
      closeCart();
    }
  });
  
  // Close cart with Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      closeCart();
    }
  });
</script>
