{% comment %}
  Shopify Buy Button Snippet
  
  This snippet adds the Shopify Buy Button to your theme.
  
  Usage:
  {% include 'shopify-buy-button' %}
  
  You can place this in any template or section where you want the buy button to appear.
{% endcomment %}

<div id='collection-component-{{ section.id }}'></div>

<script type="text/javascript">
/*<![CDATA[*/
(function () {
  var scriptURL = 'https://sdks.shopifycdn.com/buy-button/latest/buy-button-storefront.min.js';
  
  // Check if ShopifyBuy is already loaded
  if (window.ShopifyBuy) {
    if (window.ShopifyBuy.UI) {
      ShopifyBuyInit();
    } else {
      loadScript();
    }
  } else {
    loadScript();
  }
  
  // Load the Shopify Buy Button script
  function loadScript() {
    var script = document.createElement('script');
    script.async = true;
    script.src = scriptURL;
    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(script);
    script.onload = ShopifyBuyInit;
  }
  
  // Initialize the Shopify Buy Button
  function ShopifyBuyInit() {
    var client = ShopifyBuy.buildClient({
      domain: '{{ shop.permanent_domain }}',
      storefrontAccessToken: '83938ccb17c73d80e45d15b78e186976',
    });
    
    ShopifyBuy.UI.onReady(client).then(function (ui) {
      ui.createComponent('collection', {
        id: '699380531573',
        node: document.getElementById('collection-component-{{ section.id }}'),
        moneyFormat: '{{ shop.money_format | escape }}',
        options: {
          "product": {
            "styles": {
              "product": {
                "@media (min-width: 601px)": {
                  "max-width": "calc(25% - 20px)",
                  "margin-left": "20px",
                  "margin-bottom": "50px",
                  "width": "calc(25% - 20px)"
                },
                "img": {
                  "height": "calc(100% - 15px)",
                  "position": "absolute",
                  "left": "0",
                  "right": "0",
                  "top": "0"
                },
                "imgWrapper": {
                  "padding-top": "calc(75% + 15px)",
                  "position": "relative",
                  "height": "0"
                }
              },
              "button": {
                "font-family": "var(--font-body), sans-serif",
                "font-weight": "bold",
                ":hover": {
                  "background-color": "var(--color-primary-hover)",
                  "opacity": "0.9"
                },
                "background-color": "var(--color-primary)",
                ":focus": {
                  "background-color": "var(--color-primary-hover)"
                },
                "border-radius": "12px",
                "padding-left": "43px",
                "padding-right": "43px",
                "transition": "all 0.2s ease-in-out"
              }
            },
            "text": {
              "button": "{{ 'products.product.add_to_cart' | t }}"
            },
            "googleFonts": [
              "Droid Sans"
            ]
          },
          "productSet": {
            "styles": {
              "products": {
                "@media (min-width: 601px)": {
                  "margin-left": "-20px"
                }
              }
            }
          },
          "modalProduct": {
            "contents": {
              "img": false,
              "imgWithCarousel": true,
              "button": false,
              "buttonWithQuantity": true
            },
            "styles": {
              "product": {
                "@media (min-width: 601px)": {
                  "max-width": "100%",
                  "margin-left": "0px",
                  "margin-bottom": "0px"
                }
              },
              "button": {
                "font-family": "var(--font-body), sans-serif",
                "font-weight": "bold",
                ":hover": {
                  "background-color": "var(--color-primary-hover)",
                  "opacity": "0.9"
                },
                "background-color": "var(--color-primary)",
                ":focus": {
                  "background-color": "var(--color-primary-hover)"
                },
                "border-radius": "12px",
                "padding-left": "43px",
                "padding-right": "43px",
                "transition": "all 0.2s ease-in-out"
              }
            },
            "googleFonts": [
              "Droid Sans"
            ],
            "text": {
              "button": "{{ 'products.product.add_to_cart' | t }}"
            }
          },
          "option": {},
          "cart": {
            "styles": {
              "button": {
                "font-family": "var(--font-body), sans-serif",
                "font-weight": "bold",
                ":hover": {
                  "background-color": "var(--color-primary-hover)",
                  "opacity": "0.9"
                },
                "background-color": "var(--color-primary)",
                ":focus": {
                  "background-color": "var(--color-primary-hover)"
                },
                "border-radius": "12px",
                "transition": "all 0.2s ease-in-out"
              }
            },
            "text": {
              "total": "{{ 'cart.general.subtotal' | t }}",
              "button": "{{ 'cart.general.checkout' | t }}"
            },
            "googleFonts": [
              "Droid Sans"
            ]
          },
          "toggle": {
            "styles": {
              "toggle": {
                "font-family": "var(--font-body), sans-serif",
                "font-weight": "bold",
                "background-color": "var(--color-primary)",
                ":hover": {
                  "background-color": "var(--color-primary-hover)",
                  "opacity": "0.9"
                },
                ":focus": {
                  "background-color": "var(--color-primary-hover)"
                },
                "transition": "all 0.2s ease-in-out"
              }
            },
            "googleFonts": [
              "Droid Sans"
            ]
          }
        }
      });
    });
  }
})();
/*]]>*/
</script>

{% schema %}
{
  "name": "Shopify Buy Button",
  "target": "section",
  "enabled_on": {
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "paragraph",
      "content": "This snippet adds a Shopify Buy Button to your theme. You can include it in any template using {% raw %}{% include 'shopify-buy-button' %}{% endraw %}"
    }
  ]
}
{% endschema %}
