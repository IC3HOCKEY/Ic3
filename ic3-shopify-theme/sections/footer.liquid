<footer class="site-footer">
  <div class="footer-container">
    <!-- Logo and Social Media -->
    <div class="footer-section footer-logo-section">
      <div class="footer-logo">
        <a href="/" class="footer-logo-link">
          <img src="{{ 'logaic3.png' | asset_img_url: 'x100' }}" alt="{{ shop.name }}" class="footer-logo-image">
        </a>
      </div>
      
      <div class="footer-social">
        {% if settings.social_facebook_link != blank %}
          <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">
            <span class="icon-facebook">FB</span>
          </a>
        {% endif %}
        
        {% if settings.social_instagram_link != blank %}
          <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
            <span class="icon-instagram">IG</span>
          </a>
        {% endif %}
      </div>
    </div>
    
    <!-- Navigation Links -->
    <div class="footer-section">
      <h3 class="footer-heading">SHOP</h3>
      <ul class="footer-links">
        {% for link in linklists.footer.links %}
          <li class="footer-link-item">
            <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    
    <!-- Contact Information -->
    <div class="footer-section">
      <h3 class="footer-heading">KONTAKT</h3>
      <div class="footer-contact">
        {% if shop.email %}
          <p class="footer-contact-item">
            <span class="footer-contact-icon">‚úâÔ∏è</span>
            <a href="mailto:{{ shop.email }}" class="footer-contact-link">{{ shop.email }}</a>
          </p>
        {% endif %}
        
        {% if shop.phone %}
          <p class="footer-contact-item">
            <span class="footer-contact-icon">üìû</span>
            <a href="tel:{{ shop.phone }}" class="footer-contact-link">{{ shop.phone }}</a>
          </p>
        {% endif %}
      </div>
    </div>
    
    <!-- Newsletter Signup -->
    <div class="footer-section">
      <h3 class="footer-heading">NYHETSBREV</h3>
      <p class="footer-newsletter-text">Prenumerera p√• v√•rt nyhetsbrev f√∂r erbjudanden och nyheter.</p>
      
      {% form 'customer', class: 'newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form-group">
          <input type="email" 
                 name="contact[email]" 
                 class="newsletter-input" 
                 value="" 
                 placeholder="Din e-postadress"
                 aria-label="Din e-postadress"
                 required>
          <button type="submit" class="newsletter-button" name="commit">
            <span>Prenumerera</span>
          </button>
        </div>
        {% if form.errors %}
          <div class="newsletter-message newsletter-message--error">
            {{ form.errors | default_errors }}
          </div>
        {% elsif form.posted_successfully? %}
          <div class="newsletter-message newsletter-message--success">
            Tack f√∂r din prenumeration!
          </div>
        {% endif %}
      {% endform %}
    </div>
  </div>
  
  <!-- Copyright -->
  <div class="footer-bottom">
    <div class="footer-bottom-container">
      <p class="footer-copyright">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. Alla r√§ttigheter f√∂rbeh√•llna.</p>
      
      <div class="footer-payment-icons">
        <span class="payment-icon">üí≥</span>
        <span class="payment-icon">üì±</span>
      </div>
    </div>
  </div>
</footer>

