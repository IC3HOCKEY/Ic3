{% comment %}
  Header Section
  This is the main header section with logo, navigation and cart
{% endcomment %}

<header class="site-header">
  <div class="header-container">
    <!-- Left Navigation -->
    <nav class="main-nav left-nav">
      <ul class="nav-list">
        <li><a href="/collections/all" class="nav-link">SHOP</a></li>
        <li><a href="/pages/limited-drop" class="nav-link">LIMITED DROP</a></li>
      </ul>
    </nav>
    
    <!-- Logo -->
    <div class="logo-container">
      <a href="/" class="logo-link">
        <img src="{{ 'logaic3.png' | asset_url }}" alt="{{ shop.name }}" class="logo-image">
      </a>
    </div>
    
    <!-- Right Navigation -->
    <nav class="main-nav right-nav">
      <ul class="nav-list">
        <li><a href="/pages/om-oss" class="nav-link">OM OSS</a></li>
        <li><a href="/pages/kontakt" class="nav-link">KONTAKT</a></li>
      </ul>
    </nav>
    
    <!-- Cart -->
    <div class="cart-container">
      <a href="/cart" class="cart-link" aria-label="Shopping Cart">
        <span class="cart-icon">ðŸ›’</span>
        {% if cart.item_count > 0 %}
          <span class="cart-badge">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
    
    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" aria-label="Toggle Menu">
      <span class="hamburger"></span>
    </button>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}

<style>
/* ==========================================================================
   #HEADER STYLES
   ========================================================================== */

.site-header {
  background-color: #111;
  border-bottom: 1px solid #333;
  position: sticky;
  top: 0;
  z-index: 1000;
  width: 100%;
}

.header-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

/* Logo */
.logo-container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
}

.logo-image {
  height: 80px;
  width: auto;
  transition: transform 0.3s ease;
  display: block;
}

.logo-link:hover .logo-image {
  transform: scale(1.05);
}

/* Navigation */
.main-nav {
  display: flex;
  align-items: center;
}

.nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  gap: 2.5rem;
}

.nav-link {
  color: white;
  text-decoration: none;
  font-family: 'Barlow Condensed', sans-serif;
  font-size: 1.8rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: color 0.3s ease;
  position: relative;
  padding: 0.5rem 0;
}

.nav-link::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: #99dffb;
  transition: width 0.3s ease;
}

.nav-link:hover,
.nav-link:focus {
  color: #99dffb;
  text-decoration: none;
}

.nav-link:hover::after,
.nav-link:focus::after {
  width: 100%;
}

/* Cart */
.cart-container {
  margin-left: auto;
}

.cart-link {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  color: white;
  text-decoration: none;
  width: 40px;
  height: 40px;
  transition: transform 0.3s ease;
}

.cart-link:hover {
  transform: scale(1.1);
}

.cart-icon {
  font-size: 2rem;
  line-height: 1;
}

.cart-badge {
  position: absolute;
  top: -5px;
  right: -5px;
  background: #99dffb;
  color: #000;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.1rem;
  font-weight: 700;
  font-family: var(--font-body);
}

/* Mobile Menu Toggle */
.mobile-menu-toggle {
  display: none;
  background: none;
  border: none;
  width: 30px;
  height: 24px;
  position: relative;
  cursor: pointer;
  padding: 0;
  z-index: 1001;
}

.hamburger,
.hamburger::before,
.hamburger::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  background-color: white;
  transition: all 0.3s ease;
  left: 0;
}

.hamburger {
  top: 50%;
  transform: translateY(-50%);
}

.hamburger::before {
  top: -8px;
}

.hamburger::after {
  bottom: -8px;
}

/* Responsive Styles */
@media (max-width: 1024px) {
  .header-container {
    padding: 1rem;
  }
  
  .nav-list {
    gap: 1.5rem;
  }
  
  .nav-link {
    font-size: 1.6rem;
  }
  
  .logo-image {
    height: 70px;
  }
}

@media (max-width: 768px) {
  .main-nav {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(17, 17, 17, 0.98);
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  
  .main-nav.active {
    display: flex;
    opacity: 1;
    visibility: visible;
  }
  
  .nav-list {
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }
  
  .nav-link {
    font-size: 2.2rem;
  }
  
  .mobile-menu-toggle {
    display: block;
  }
  
  .logo-container {
    position: static;
    transform: none;
    margin-right: auto;
  }
  
  .logo-image {
    height: 60px;
  }
  
  .cart-container {
    margin-left: 0;
  }
}

@media (max-width: 480px) {
  .logo-image {
    height: 50px;
  }
  
  .nav-link {
    font-size: 1.8rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const menuToggle = document.querySelector('.mobile-menu-toggle');
  const nav = document.querySelector('.main-nav');
  const hamburger = document.querySelector('.hamburger');
  
  if (menuToggle && nav) {
    menuToggle.addEventListener('click', function() {
      nav.classList.toggle('active');
      menuToggle.classList.toggle('active');
      document.body.classList.toggle('menu-open');
    });
  }
  
  // Close menu when clicking on a nav link
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', function() {
      nav.classList.remove('active');
      menuToggle.classList.remove('active');
      document.body.classList.remove('menu-open');
    });
  });
});
