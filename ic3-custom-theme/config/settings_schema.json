[
  {
    "name": "theme_info",
    "theme_name": "IC3 Custom Theme",
    "theme_version": "1.0.0",
    "theme_author": "IC3",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#007bff"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#ffffff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading Font",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body Font",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "heading_size",
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px",
        "label": "Heading Base Size",
        "default": 24
      },
      {
        "type": "range",
        "id": "body_size",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Body Base Size",
        "default": 16
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Header Settings"
      },
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "show_search",
        "label": "Show search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_cart_icon",
        "label": "Show cart icon",
        "default": true
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Footer Settings"
      },
      {
        "type": "link_list",
        "id": "footer_menu_1",
        "label": "Footer Menu 1",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_menu_2",
        "label": "Footer Menu 2"
      },
      {
        "type": "text",
        "id": "footer_copyright",
        "label": "Copyright Text",
        "default": "Â© {{ 'now' | date: "%Y" }} IC3. All rights reserved."
      },
      {
        "type": "checkbox",
        "id": "show_social_icons",
        "label": "Show social media icons",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Media Links"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      }
    ]
  },
  {
    "name": "Product Grid",
    "settings": [
      {
        "type": "header",
        "content": "Product Grid Settings"
      },
      {
        "type": "range",
        "id": "products_per_page",
        "min": 2,
        "max": 50,
        "step": 1,
        "label": "Products per page",
        "default": 12
      },
      {
        "type": "select",
        "id": "products_per_row_desktop",
        "label": "Products per row (desktop)",
        "options": [
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          }
        ],
        "default": "4"
      },
      {
        "type": "select",
        "id": "products_per_row_mobile",
        "label": "Products per row (mobile)",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          }
        ],
        "default": "2"
      }
    ]
  },
  {
    "name": "Checkout",
    "settings": [
      {
        "type": "header",
        "content": "Checkout Settings"
      },
      {
        "type": "checkbox",
        "id": "show_quantity_selector",
        "label": "Show quantity selector",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_variant_selector",
        "label": "Show variant selector",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_dynamic_checkout",
        "label": "Show dynamic checkout button",
        "info": "Using the payment method available on your store, customers see their preferred option, like PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
        "default": true
      }
    ]
  }
]
